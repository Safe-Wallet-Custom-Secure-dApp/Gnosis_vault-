name: Flip README

on:
  push:
    paths:
      - "README.md"
      - "scripts/generate-upside-down.ts"
  workflow_dispatch:
  schedule:
    # 01:00 UTC daily == 02:00 Africa/Lagos (approx, DST ignored)
    - cron: "0 1 * * *"

permissions:
  contents: write
  pull-requests: write

jobs:
  flip:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Setup Node
        uses: actions/setup-node@v4
        with:
          node-version: 20

      - name: Install deps
        run: npm ci

      - name: Generate upside-down README
        run: npm run flip-readme

      - name: Commit flipped README if changed
        run: |
          if git diff --quiet README.upside-down.md; then
            echo "No changes to upside-down README."
            exit 0
          fi
          git config user.name "gnosisbot"
          git config user.email "actions@users.noreply.github.com"
          git add README.upside-down.md
          git commit -m "chore(readme): auto-update upside-down README [skip ci]"
          git push
